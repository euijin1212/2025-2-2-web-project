<%- include('partials/header') %>

<div class="container mt-4">
  <h2 class="mb-3"><%= study.title %> - 게시판</h2>

  <div class="mb-3 text-end">
    <a href="/studies/<%= study.id %>/room" class="btn btn-outline-secondary btn-sm me-2">
      스터디 홈
    </a>
    <a href="/studies/<%= study.id %>/board/new" class="btn btn-primary btn-sm">
      글쓰기
    </a>
  </div>

  <% if (posts && posts.length > 0) { %>
    <ul class="list-group">
      <% posts.forEach(post => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <a href="/studies/<%= study.id %>/board/<%= post.id %>">
              <strong><%= post.title %></strong>
            </a><br>
            <small class="text-muted">
              by <%= post.authorName || '알 수 없음' %> ·
              <%= post.createdAt.toISOString().slice(0, 10) %>
            </small>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <div class="border rounded p-3 bg-light">
      <span class="text-muted">아직 게시글이 없습니다.</span>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>
