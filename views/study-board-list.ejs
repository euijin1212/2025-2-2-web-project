<%- include('partials/header') %>

<style>
  .board-list-container {
    max-width: 900px;
    margin: 2rem auto;
  }

  .board-header {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  .board-header h2 {
    color: #2d3748;
    font-weight: 700;
    margin: 0;
  }

  .btn-study-home {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    display: inline-block;
  }

  .btn-study-home:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(102, 126, 234, 0.4);
    color: white;
  }

  .btn-write {
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(79, 172, 254, 0.3);
    display: inline-block;
  }

  .btn-write:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(79, 172, 254, 0.4);
    color: white;
  }
</style>

<!-- Header -->
<div class="mb-2 p-4 rounded-3">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
        <h2 class="mb-0 d-flex align-items-center" style="color: #2d3748; font-weight: 700;">
            <img src="/images/edit.png" alt="study-board" class="icon-png"><%= study.title %> - 게시판
        </h2>
        <div>
            <a href="/studies/<%= study.id %>/room" class="btn-study-home me-2">
                <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 6px; vertical-align: -3px;">
                    <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5ZM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5 5 5Z"/>
                </svg>
                스터디 홈
            </a>
            <a href="/studies/<%= study.id %>/board/new" class="btn-write">
                <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 6px; vertical-align: -3px;">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                </svg>
                글쓰기
            </a>
        </div>
    </div>
</div>

  <% if (posts && posts.length > 0) { %>
    <ul class="list-group">
      <% posts.forEach(post => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <a href="/studies/<%= study.id %>/board/<%= post.id %>">
              <strong><%= post.title %></strong>
            </a><br>
            <small class="text-muted">
              by <%= post.authorName || '알 수 없음' %> ·
              <%= post.createdAt.toISOString().slice(0, 10) %>
            </small>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <div class="border rounded p-3 bg-light">
      <span class="text-muted">아직 게시글이 없습니다.</span>
    </div>
  <% } %>

<%- include('partials/footer') %>
