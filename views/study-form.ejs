<!-- 수정 일 때와 일반적으로 만들 때 두가지 버전으로 변수들이 바뀌도록 함 -->
<!-- 렌더링 할 때 객체를 넘겨줌 ex) study -->
<% 
    const isEditing = (typeof study !== 'undefined');
    const pageTitle = isEditing ? 'EDIT YOUR STUDY' : 'CREATE YOUR STUDY';
    const formAction = isEditing ? '/studies/' + study.id + '/update' : '/studies/create';
    const studyTitle = isEditing ? study.title : '';
    const studyDesc = isEditing ? study.description : '';
    const studyMaxMembers = isEditing ? study.maxMembers : 10;
    const studyDay = isEditing ? (study.day || '') : '';

    const bookIsbn = isEditing ? (study.bookIsbn || '') : '';
    const bookTitle = isEditing ? (study.bookTitle || '') : '';
    const bookCoverUrl = isEditing ? (study.bookCoverUrl || '') : '';
    const bookAuthor = isEditing ? (study.bookAuthor || '') : '';
%>

<%- include('partials/header') %> 

<div class="mb-4 p-2 rounded-2">
    <div class="d-flex align-items-end">
        <h2 class="mb-0 me-3 d-flex align-items-center">
            <img src="/images/edit.png" alt="검색" class="icon-png"> <%= pageTitle %>
        </h2> 
        <p class="mb-0 text-secondary d-none d-md-block ms-1">
            관심 있는 주제에 대한 독서 모임을 만들어보세요
        </p>
    </div>
</div>

<!-- formAction 역시 수정일 때와 아닐 때 구분위해 변수로 둠 -->
<form id="study-form" action="<%= formAction %>" method="POST">
    
    <!-- [레이아웃 변경] 화면을 좌우로 나누기 위한 row 추가 -->
    <div class="row g-4">
        
        <!-- === [왼쪽 컬럼] 책 검색 및 결과 (col-md-5 ~ 6) === -->
        <div class="col-lg-5 col-md-6">
            <div class="p-4 rounded-2 border bg-secondary-subtle h-100">
                <label for="book-search" class="form-label fw-bold mb-3">1. 토론할 책 검색</label>
                
                <div class="input-group mb-3">
                    <input type="text" class="form-control border border-secondary-subtle" id="book-search" placeholder="책 제목을 입력하세요..." value="">
                    <button class="btn btn-dark" type="button" id="book-search-btn">search</button>
                </div>

                <!-- 검색 결과 표시 영역 -->
                <div id="book-search-results" class="mt-2" style="max-height: 500px; overflow-y: auto;"></div>

                <!--hidden input에 기존 값 세팅 -->
                <input type="hidden" name="bookIsbn" id="selected-book-isbn" value="<%= bookIsbn %>">
                <input type="hidden" name="bookTitle" id="selected-book-title" value="<%= bookTitle %>">
                <input type="hidden" name="bookCoverUrl" id="selected-book-cover" value="<%= bookCoverUrl %>">
                <input type="hidden" name="bookAuthor" id="selected-book-author" value="<%= bookAuthor %>">

                <!-- 선택된 책 미리보기 (수정 모드이거나 선택 후) -->
                <!-- [수정] position-relative 추가 (X 버튼 위치 기준점) -->
                <div id="selected-book-preview" class="mt-3 p-3 border rounded bg-white position-relative">
                    <% if (bookTitle || bookCoverUrl) { %>
                        <!-- [수정] 우측 상단 X 버튼 (btn-close) -->
                        <button type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="선택 취소" onclick="clearBookSelection()"></button>
                        
                        <div class="d-flex align-items-center">
                            <% if (bookCoverUrl) { %>
                                <img src="<%= bookCoverUrl %>" style="width:64px;height:96px;object-fit:cover;margin-right:10px;">
                            <% } %>
                            <div class="pe-4">
                                <div class="fw-bold" style="display: -webkit-box; -line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">
                                    <%= bookTitle %>
                                </div>
                                <div class="text-muted small"><%= bookAuthor %></div>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="text-center text-muted small py-3" id="no-book-msg">선택된 도서가 없습니다.</div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- === [오른쪽 컬럼] 스터디 상세 정보 입력 (col-md-6 ~ 7) === -->
        <div class="col-lg-7 col-md-6">
            <div class="p-4 rounded-2 border border-secondary-subtle h-100">
                <div class="mb-4">
                    <label for="study-title" class="form-label fw-bold">2. 스터디 제목</label>
                    <input type="text" class="form-control" id="study-title" name="title" required value="<%= studyTitle %>" placeholder="예: 매주 월요일, 인간관계론 함께 읽어요">
                </div>
                
                <div class="mb-2">
                    <label for="study-description" class="form-label fw-bold">3. 스터디 소개 및 규칙</label>
                    <textarea class="form-control" id="study-description" name="description" rows="12" required placeholder="스터디 진행 방식, 규칙 등을 자세히 적어주세요."><%= studyDesc %></textarea>
                </div>
                
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label for="study-max-members" class="form-label ms-1 fw-bold">모집 인원</label>
                        <input type="number" class="form-control" id="study-max-members" name="maxMembers" value="<%= studyMaxMembers %>" min="2" max="50">
                    </div>
                    <div class="col-md-6">
                        <label for="study-day" class="form-label ms-1 fw-bold">주요 요일</label>
                        <select id="study-day" class="form-select" name="day">
                            <option value="">선택 안 함</option>
                            <option value="mon" <%= studyDay === 'mon' ? 'selected' : '' %>>월</option>
                            <option value="tue" <%= studyDay === 'tue' ? 'selected' : '' %>>화</option>
                            <option value="wed" <%= studyDay === 'wed' ? 'selected' : '' %>>수</option>
                            <option value="thu" <%= studyDay === 'thu' ? 'selected' : '' %>>목</option>
                            <option value="fri" <%= studyDay === 'fri' ? 'selected' : '' %>>금</option>
                            <option value="sat" <%= studyDay === 'sat' ? 'selected' : '' %>>토</option>
                            <option value="sun" <%= studyDay === 'sun' ? 'selected' : '' %>>일</option>
                        </select> 
                    </div>
                </div>

                <div class="d-grid mt-auto">
                    <button type="submit" class="btn btn-dark fw-bold"><%= isEditing ? '수정 완료' : 'CREATE' %></button>
                </div>
            </div>
        </div>

    </div> <!-- //row end -->
</form>

<script>
    const resultsEl = document.getElementById('book-search-results');
    const previewEl = document.getElementById('selected-book-preview');

    function clearBookSelection() {
        document.getElementById('selected-book-isbn').value = '';
        document.getElementById('selected-book-title').value = '';
        document.getElementById('selected-book-cover').value = '';
        document.getElementById('selected-book-author').value = '';

        previewEl.style.display = 'block'; 
        previewEl.innerHTML = '<div class="text-center text-muted small py-3" id="no-book-msg">선택된 도서가 없습니다.</div>';
    }

    async function searchBooks(keyword) {
        if (!keyword) return;
        
        if (!document.getElementById('selected-book-title').value) {
            previewEl.style.display = 'none';
        }

        resultsEl.innerHTML = '<div class="text-center py-3"><div class="spinner-border spinner-border-sm" role="status"></div> 검색 중...</div>';
        try {
            const res = await fetch(`/search-books?keyword=${encodeURIComponent(keyword)}`);
            const data = await res.json();
            resultsEl.innerHTML = '';
            if (!data.books || data.books.length === 0) {
                resultsEl.innerHTML = '<div class="text-muted text-center py-3">검색 결과가 없습니다.</div>';
                return;
            }
            const list = document.createElement('div');
            list.className = 'list-group list-group-flush bg-white rounded border';
            
            data.books.forEach(book => {
                const item = document.createElement('button');
                item.type = 'button'; 
                item.className = 'list-group-item list-group-item-action d-flex align-items-center select-book-btn';
                item.innerHTML = `
                    <img src="${book.cover || ''}" alt="" style="width:40px;height:60px;object-fit:cover;margin-right:10px; flex-shrink:0;">
                    <div class="text-start overflow-hidden">
                        <div class="fw-bold" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">${book.title}</div>
                        <div class="text-muted small text-truncate">${book.author || ''}</div>
                    </div>
                `;
                
                item.addEventListener('click', () => {
                    document.getElementById('selected-book-isbn').value = book.isbn || '';
                    document.getElementById('selected-book-title').value = book.title || '';
                    document.getElementById('selected-book-cover').value = book.cover || '';
                    document.getElementById('selected-book-author').value = book.author || '';
                    
                    previewEl.style.display = 'block';

                    previewEl.innerHTML = `
                        <button type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="선택 취소" onclick="clearBookSelection()"></button>
                        <div class="d-flex align-items-center">
                            <img src="${book.cover || ''}" style="width:64px;height:96px;object-fit:cover;margin-right:10px;">
                            <div class="pe-4">
                                <div class="fw-bold" style="display: -webkit-box; -line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">${book.title}</div>
                                <div class="text-muted small">${book.author || ''}</div>
                            </div>
                        </div>
                    `;
                    
                    resultsEl.innerHTML = '';
                });
                
                list.appendChild(item);
            });
            resultsEl.appendChild(list);
        } catch (err) {
            console.error(err);
            resultsEl.innerHTML = '<div class="text-danger text-center">검색 중 오류가 발생했습니다.</div>';
        }
    }

    document.getElementById('book-search-btn').addEventListener('click', () => {
        const keyword = document.getElementById('book-search').value.trim();
        searchBooks(keyword);
    });

    document.getElementById('book-search').addEventListener('keydown', (e) => {
        if (e.key === 'Enter') {
            e.preventDefault(); 
            document.getElementById('book-search-btn').click();
        }
    });
</script>

<%- include('partials/footer') %>